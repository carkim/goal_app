
<div class="goal-container">
  <h1><%= @goal.title %></h1>
  <div class="line"></div>
  <p>
    <%= @goal.body %>
  </p>
</div>
<%= button_to "Edit", edit_goal_path(@goal) %>
<%= button_to "Delete Goal", goal_path(@goal), method: :delete, data: {confirm: "Confirm that you want to delete the goal."} %>
<%= link_to "Back to Goals", goals_path %>
<%= render partial: 'notes/form' %>
<h3>Notes</h3>
<%= render partial: 'goals/note', collection: @goal.notes %>
